<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Question</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                <li class="breadcrumb-item ">Exams</li>
                <li class="breadcrumb-item active">Edit Question</li>
                </ol>
            </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
         <div class="row">
          <div class="col-12 col-lg-12 col-xl-6">
            <!-- general form elements -->
             {{> alert}}
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Question</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
             
              <form role="form" id="add_question" method="post">
                <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Year</label>
                    <select name="year" data="{{data.question.year}}"  class="form-control" id="dropdownYear" required></select>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Section</label>
                        <select name="type" data="{{data.question.type}}" id="section" class="form-control" required>
                            <option value="Section A">Section A</option>
                            <option value="Section B">Section B</option>
                            <option value="Practicals">Practicals</option>
                        </select>
                </div>

                 <div class="form-group">
                    <label for="exampleInputEmail1">Exam type</label>
                        <select name="exam_type" id="examType" data="{{data.question.exam_type}}" class="form-control" required>
                            <option value="2">WASSCE School</option>
                            <option value="1">WASSCE Private</option>
                            <option value="4">BECE School</option>
                            <option value="3">BECE Private</option>
                        </select>
                 </div>

                 <div class="form-group">
                    <label for="exampleInputEmail1">Subject</label>
                        <select data={{data.question.subject}} name="subject" class="form-control" required id="subjectsDrop">
                            <option value="0">--Select option--</option>
                            {{#each data.subjects as |subject|}}
                                 <option value="{{subject.sub_id}}">{{subject.subject}}</option>
                            {{/each}}
                        </select>
                 </div>

                 <div class="form-group">
                    <label for="exampleInputEmail1">Topic</label>
                        <select data={{data.question.topic}} name="topic" id="topicsDrop" class="form-control" required>
                            {{#each data.topics as |topic|}}
                                 <option value="{{topic.t_id}}">{{topic.topic}}</option>
                            {{/each}}
                        </select>
                 </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Question</label>
                        <textarea id="question" name="question" class="form-control" placeholder="Enter Question Here">{{data.question.question}}</textarea>
                 </div>

                 <div class="form-group">
                      <label for="exampleInputEmail1">Question Pic (optional)</label>
                     <input type="text" class="form-control" value="{{data.question.q_photo}}" readonly/>
                     <div class="custom-file">
                      <input id="q_photo" type="file">
                      <label class="custom-file-label" for="q_photo">Choose file</label>
                    </div>
                 </div>
                 <input type="hidden" name="edit" value="true"/>
                  <input type="hidden" name="q_id" value="{{data.question.q_id}}"/>

                 <h3>Answer</h3>
                 <hr/>
                  
                  <div class="form-group">
                    <label for="exampleInputEmail1">Text</label>
                        <textarea id="a_text" name="a_text" class="form-control" placeholder="Enter Answere Here">{{data.question.a_text}}</textarea>
                 </div>

                 <div class="form-group">
                      <label for="exampleInputEmail1">Pic</label>
                      <input type="text" class="form-control" value="{{data.question.a_photo}}" readonly/>
                     <div class="custom-file">
                      <input id="a_photo" type="file" class="custom-file-input">
                      <label class="custom-file-label" for="a_photo">Choose file</label>
                    </div>
                 </div>

                 <div class="form-group">
                    <label for="exampleInputEmail1">Video</label>
                        <input id="a_video" value="{{data.question.a_video}}"  class="form-control" type="text" placeholder="eg. https://www.youtube.com/watch?v=cBBHJxRw--g" name="a_video">
                 </div>
                 

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
         </div>

      </div>
    </section>
  </div>